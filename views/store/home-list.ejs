<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>
    
 <main class="container ">
      <h2>
        Here are your registered homes:
      </h2>
      <div class="cards-wrapper">
  <% registeredHomes.forEach(home => { %>
    <a href="/home/<%= home._id %>" class="card image-overlay-card block">
    <div class="card image-overlay-card">
      <img src="<%= home['photoUrl'] %>" alt="home photo" />

      <div class="overlay-content">
        <div class="info">
          <span class="house-name"><%= home.houseName %></span>
          <span>Location:<%= home.location %></span>
          <div class="price-rating-row">
            <span class="price">₹<%= home.price %>/night</span>
            <span class="rating">⭐ <%= home.rating %></span>
          </div>
        </div>
       <div class="home-detail-box">
    <div class="button-wrapper">
        <% if (isLoggedIn && user.userType === 'guest') { %>
  <form action="/bookings/<%= home._id %>" method="GET">
    <button type="submit" class="btn">Book Now</button>
  </form>
<% } %>
          </div>
        </div>
      </div>
    </div>
    </a>
  <% }) %>
</div>
    </main>


</body>
</html>