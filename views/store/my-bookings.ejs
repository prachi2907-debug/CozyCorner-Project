<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>

    <main class="container">
      <h2 class="section-title">My Bookings</h2>

      <% if (bookings.length === 0) { %>
        <p style="color: #6b7280; font-size: 1.1rem;">No bookings found.</p>
      <% } else { %>
        <ul class="booking-list">
          <% bookings.forEach(booking => { %>
            <li class="booking-card">
              <div class="booking-title"><%= booking.home.houseName %></div>
              <div class="booking-details">
                <span>Check-in: <strong><%= booking.checkinDate.toDateString() %></strong></span> |
                <span>Check-out: <strong><%= booking.checkoutDate.toDateString() %></strong></span> |
                <span>Time: <strong><%= booking.time %></strong></span>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </main>
  </body>
</html>



